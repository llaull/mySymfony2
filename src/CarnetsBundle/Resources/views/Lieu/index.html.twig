{% extends "CommunUserBundle:Admin:MainWrapper.html.twig" %}
{% block title %}Les menu{% endblock title %}
{% block h1_header %}les villes{% endblock h1_header %}
{% block h1_header_s %}menu du carnet{% endblock h1_header_s %}

{% block dynamic_body %}

    <div class="col-md-12 bootstrap-grid">

        <div class="powerwidget" id="datatable-basic-init" data-widget-editbutton="false">
            <header>
                {#<h2>plup#}
                    {#<small>Basic Init {{ pagination.totalCount }}</small>#}
                {#</h2>#}
            </header>
            <div class="inner-spacer">

                <ul>
                    <li>
                        <a class="btn btn-success btn-sm" role="button" href="{{ path('admin_lieu_new') }}">New</a>
                    </li>
                </ul>

                <table class="table table-striped table-hover" id="table-1">
                    <thead>
                    <tr>
                        <th>Nom du carnet</th>
                        <th>destination</th>
                        <th>Ville</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in pagination %}
                        <tr {% if loop.index is odd %}class="info"{% endif %}>
                            <td class="col-md-4">{{ entity.carnet }}</td>
                            <td class="col-md-3">{{ entity.destination }}</td>
                            <td class="col-md-3">{{ entity.ville }}</td>
                            <td class="col-md-2">
                                <div class="btn-group">
                                    <a class="btn btn-default btn-sm" role="button"
                                       href="{{ path('carnets_de_voy_ville', { 'carnet': entity.carnetSlug, 'ville': entity.villeSlug}) }}">view</a>
                                    <a class="btn btn-warning btn-sm" role="button"
                                       href="{{ path('admin_lieu_edit', { 'id': entity.id }) }}">edit</a>
                                    <a class="btn btn-danger btn-sm modal-delete" role="button"
                                       data-href="{{ path('admin_lieu_delete', { 'id': entity.id }) }}"
                                       href="{{ path('admin_lieu_delete', { 'id': entity.id }) }}">Delete</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock dynamic_body %}
