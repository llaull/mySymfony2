{% extends 'CarnetsBundle:Default:index.html.twig' %}

    {% block body %}
        <!-- INNER-BANNER -->
        <div class="inner-banner style-6 background-block" style="background-color: #5f5f5f">

            {% if page.lieu.imageHeader is defined %}
                {% set image = page.lieu.imageHeader %}
            {% elseif page.imageHeader %}
                {% set image = page.imageHeader %}
            {% endif %}
          {#   <img class="center-image" src="{{ image }}"/>#}

            <div class="vertical-align">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-md-8 col-md-offset-2">
                            <ul class="banner-breadcrumb color-white clearfix">
                                <li><a class="link-blue-2" href="{{ path('carnets_de_voy_homepage') }}">home</a> /</li>
                                <li><a class="link-blue-2"
                                       href="{{ path('carnets_de_voy_destination',{'slug':entity.slug}) }}">{{ entity.title }}</a>
                                    /
                                </li>
                                {% if page.ville is defined %}
                                    <li><span>{{ page.ville }}</span></li>
                                {% elseif page.titre %}
                                    <li><a class="link-blue-2"
                                           href="{{ path('carnets_de_voy_ville',{'carnet':entity.slug,'ville': page.lieu.slug }) }}"> {{ page.lieu.ville }}</a>
                                /
                                </li>
                                <li><span>{{ page.titre }}</span></li>
                                {% endif %}

                            </ul>
                            <h2 class="color-white">{{ entity.title }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="detail-wrapper">
            <div class="container">
                <div class="detail-header">
                    <div class="row">
                        <div class="col-xs-12 col-sm-8">
                            {% if page.lieu.ville is defined %}
                                <div class="detail-category color-grey-3">{{ page.lieu.ville }}</div>
                            {% endif %}
                            <h2 class="detail-title color-dark-2">
                                {% if page.ville is defined %}
                                    {{ page.ville }}
                                {% elseif page.titre %}
                                    {{ page.titre }}
                                {% endif %}
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="row padd-90">
                    <div class="col-xs-12 col-md-8">
                        <div class="detail-content color-1">

                            <div class="detail-content-block">
                                {{ page.contenu | raw }}
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-4">
                        <div class="right-sidebar">
                            <div class="detail-block bg-dr-blue">
                                <div class="details-desc">
                                    {% if pinterest_board is not null %}
                                        <a data-pin-do="embedBoard" data-pin-lang="fr" data-pin-board-width="230"
                                           data-pin-scale-height="300"
                                           data-pin-scale-width="60"
                                           href="https://www.pinterest.com/{{ pinterest_account }}/{{ pinterest_board }}/"></a>
                                        <script async defer src="//assets.pinterest.com/js/pinit.js"></script>
                                    {% endif %}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid text-center">
            <div class="row content">

                <div class="col-sm-9 text-left">

                </div>
                <div class="col-sm-3 sidenav">

                </div>
            </div>
        </div>
        {{ dump() }}
    {% endblock %}