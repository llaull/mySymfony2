{% extends "CommunUserBundle:Admin:MainWrapper.html.twig" %}
{% block title %}les carnets de voyages{% endblock title %}
{% block h1_header %}Les carnet de voyages{% endblock h1_header %}
{% block h1_header_s %}-{% endblock h1_header_s %}

{% block dynamic_body %}

    <div class="col-md-12 bootstrap-grid">

        <div class="powerwidget" id="datatable-basic-init" data-widget-editbutton="false">
            <header>
                {#<h2>tableaux</h2>#}
                {#<h2>plup#}
                {#<small>-</small>#}
                {#</h2>#}
            </header>
            <div class="inner-spacer">

                <table class="table table-striped table-hover" id="table-1">
                    <thead>
                    <tr>
                        <th>Posted</th>
                        <th>Authorname</th>
                        <th>Authormail</th>
                        <th>Contenu</th>
                        <th>Publied</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>

                            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ entity.authorName }}</td>
                            <td>{{ entity.authorMail }}</td>
                            <td>{{ entity.contenu }}</td>
                            <td>{{ entity.publied }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('admin_carnet_blog_comment_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_carnet_blog_comment_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock dynamic_body %}
