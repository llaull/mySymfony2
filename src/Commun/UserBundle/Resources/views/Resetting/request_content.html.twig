{% trans_default_domain 'FOSUserBundle' %}
<div class="colorful-page-wrapper">
    <div class="center-block">
        <div class="login-block">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="post" id="login-form" class="orb-form">
                <header>
                    <div class="image-block"><img src="images/logo.png" alt="User"/></div>
                </header>
                <section>
                    <div class="row">

                        <label for="username">{{ 'resetting.request.username'|trans }}</label>

                        <div class="col col-8">
                            <label class="input"> <i class="icon-append fa fa-user"></i>
                                <input type="text" id="username" name="username" required="required"/>
                            </label>
                        </div>
                        {% if invalid_username is defined %}
                            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
                        {% endif %}

                    </div>
                </section>

                </fieldset>
                <footer>
                    <input type="submit" id="_submit" class="btn btn-default" name="_submit"
                           value="{{ 'resetting.request.submit'|trans }}"/>
                </footer>
            </form>

        </div>
        <div class="copyrights"> ORB Power Admin Dashboard Template <br>
            Created by DazeinCreative &copy; 2014
        </div>
    </div>
</div>
