{% extends "CommunUserBundle:Admin:body_content.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block title %}login{% endblock %}
{% block user_body_content %}

    <div class="colorful-page-wrapper">
        <div class="center-block">
            <div class="login-block">
                <form action="{{ path("fos_user_security_check") }}" method="post" id="login-form" class="orb-form">
                    <header>
                        <div class="image-block">
                            {% image '@CommunUserBundle/Resources/public/images/logo.png'
                            output='images/orb-logo.png' %}
                            <img alt="" class="User" src="{{ asset_url }}"/>
                            {% endimage %}

                        </div>
                        Login to ORB
                        <small>Have no account? &#8212; <a href="{{ path('fos_user_registration_register') }}">Register</a></small>
                    </header>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    <section>
                        <div class="row">
                            <label class="label col col-4">{{ 'security.login.username'|trans }}</label>
                            <div class="col col-8">
                                <label class="input"> <i class="icon-append fa fa-user"></i>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                                           required="required"/>
                                </label>
                                {% if error %}
                                    <em for="username" class="invalid">{{ error.messageKey|trans(error.messageData, 'security') }}</em>
                                {% endif %}
                            </div>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                            <label class="label col col-4">{{ 'security.login.password'|trans }}</label>

                            <div class="col col-8">
                                <label class="input"> <i class="icon-append fa fa-lock"></i>
                                    <input type="password" id="password" name="_password" required="required"/>
                                </label>
                                <div class="note"><a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a></div>
                            </div>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                            <div class="col col-4"></div>
                            <div class="col col-8">
                                <label class="checkbox" for="remember_me">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                                    <i></i>{{ 'security.login.remember_me'|trans }}</label>
                            </div>
                        </div>
                    </section>
                    </fieldset>
                    <footer>
                        <input type="submit" id="_submit" class="btn btn-default" name="_submit"
                               value="{{ 'security.login.submit'|trans }}"/>
                    </footer>
                </form>

            </div>
            <div class="copyrights"> ORB Power Admin Dashboard Template <br>
                Created by DazeinCreative &copy; 2014
            </div>
        </div>
    </div>

{% endblock user_body_content %}
