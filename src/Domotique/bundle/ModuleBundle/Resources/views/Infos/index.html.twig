{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Infos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Moduleref</th>
                <th>Modulenom</th>
                <th>Nrfid</th>
                <th>Moduletype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_domotique_module_infos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.moduleRef }}</td>
                <td>{{ entity.moduleNom }}</td>
                <td>{{ entity.nrfId }}</td>
                <td>{{ entity.moduleType }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_domotique_module_infos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_domotique_module_infos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_domotique_module_infos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
