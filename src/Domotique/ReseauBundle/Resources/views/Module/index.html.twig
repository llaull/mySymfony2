{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Module list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Created</th>
                <th>Modified</th>
                <th>Id</th>
                <th>Name</th>
                <th>Adressmac</th>
                <th>Adressipv4</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_domotique_modules_show', { 'id': entity.id }) }}">{{ entity.created }}</a></td>
                <td>{% if entity.modified %}{{ entity.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.adressMac }}</td>
                <td>{{ entity.adressIpv4 }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_domotique_modules_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_domotique_modules_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_domotique_modules_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
