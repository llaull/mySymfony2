{% extends "CommunUserBundle:Admin:MainWrapper.html.twig" %}
{% block title %}flux tcl{% endblock title %}
{% block h1_header %}feed{% endblock h1_header %}
{% block h1_header_s %}-{% endblock h1_header_s %}

{% block dynamic_body %}

    <div class="col-md-12 bootstrap-grid">

        <div class="powerwidget" id="datatable-basic-init" data-widget-editbutton="false">
            <header>
                <h2>Datatable
                    <small>Basic Init {{ pagination.getTotalItemCount }}</small>
                </h2>
            </header>
            <div class="inner-spacer">

                <table class="table table-striped table-hover" id="table-1">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th{% if pagination.isSorted('p.created') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Created', 'p.created') }}</th>
                        <th>Added</th>
                        <th{% if pagination.isSorted('p.title') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Title', 'p.title')|raw }}</th>
                        <th>Description</th>
                        <th>Used</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in pagination %}
                        <tr {% if loop.index is odd %}class="info"{% endif %}>
                            <td><a href="{{ path('admin_tcl_feed_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                            </td>
                            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if entity.added %}{{ entity.added|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ entity.title }}</td>
                            <td>{{ entity.description }}</td>
                            <td>{{ entity.used }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a data-toggle="modal" data-target="#myModal" href="{{ path('admin_tcl_feed_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                    {#{%- use 'TclBundle:Feed:show.html.twig' -%}#}
                    {#{{ render(controller('TclBundle:Feed:show', { 'id': '5'})) }}#}
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


{% endblock dynamic_body %}
